<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Add any additional stylesheets or scripts you need -->
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Forgot password</div>
                    <div class="card-body">
                        <!-- Display errors here -->
                       @if (flashMessages.has('error'))
                         <div role="alert" class="text-danger">
                           {{ flashMessages.get('error') }}
                         </div>
                       @endif

                       @if(flashMessages.has('success'))
                       <h4>An email has been sent with instructions to reset email.</h4>
                       @else

                        <!-- Your login form goes here -->
                        <form method="POST" action="/forgot-password">
                            {{ csrfField() }}
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="email" id="email" class="form-control" required value="{{ flashMessages.get('email','')}}">
                            </div>
                            <button type="submit" class="btn btn-primary">Reset</button>
                        </form>
                       @endif
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
